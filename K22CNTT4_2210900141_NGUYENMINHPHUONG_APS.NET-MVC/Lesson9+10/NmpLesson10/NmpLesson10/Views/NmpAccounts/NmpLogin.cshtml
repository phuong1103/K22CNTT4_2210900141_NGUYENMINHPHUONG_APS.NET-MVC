@model NmpLesson10.Models.NmpAccount
@{
    ViewBag.Title = "NmpLogin";
    Layout = "~/Views/Shared/_NmpLayout.cshtml";
}

<h2>Đăng nhập hệ thống</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>NmpAccount</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.NmpUserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NmpUserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NmpUserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NmpPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NmpPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NmpPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        
           

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="NMP:Login" class="btn btn-primary my-2" />
            </div>
        </div>
    </div>
}


