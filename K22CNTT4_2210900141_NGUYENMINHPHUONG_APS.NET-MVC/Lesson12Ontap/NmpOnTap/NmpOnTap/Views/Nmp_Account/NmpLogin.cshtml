@model NmpOnTap.Models.Nmp_Account
@{
    ViewBag.Title = "NmpLogin";
    Layout = "~/Views/Shared/_NmpLayout.cshtml";
}

<h2>Đăng nhập hệ thống</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
       

        <div class="form-group">
            @Html.LabelFor(model => model.Nmp_UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nmp_UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nmp_UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nmp_PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nmp_PassWord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nmp_PassWord, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="NmpLogin" class="btn btn-primary my-2" />
            </div>
        </div>
    </div>
}

