
@{
    ViewBag.Title = "Ngôn Ngữ Razor";
}

<h2>Ngôn Ngữ Razor</h2>
<h3>Biến</h3>

@{ 
    var name = "Nguyễn Minh Phương";
    int age = 20;
    DateTime dt = DateTime.Now;

}
<p>Họ tên :@name</p>
<p>Tuổi : @age</p>
<p>Time: @dt</p>
<hr/>
<h3>Câu lệnh if</h3>
@{
if (age > 20)
            {
                <p>Tuổi @age => Bạn đã già rồi</p>
            }
else
            {
                <p>Yên tâm! Bạn vẫn còn trẻ chán!!!</p>
            }
}
<hr />
<h3> Loop:for,while,do....,while,foreach....</h3>
@{ 
    int num = 10;

}
@for (int i = 0; i < num; i++)
            {
                <li>@i => @i*@i</li>
            }
<hr />
<h3> Mảng </h3>
@{ 
    string[] names = { "Nguyễn Minh Phương", "Nguyễn Văn A", "Nguyễn Văn B", "Nguyễn Văn C" };

}
@foreach(var item in names)
            {
                <p>@item</p>
            }